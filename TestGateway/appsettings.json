{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "JwtSettings": {
    "SecretKey": "ThisIsAVerySecretKeyForJWTTokenGenerationAndItShouldBeAtLeast32Characters",
    "Issuer": "TestAuthSSO",
    "Audience": "TestAuthSSO-Users"
  },
  "ReverseProxy": {
    "Routes": {
      "auth-route": {
        "ClusterId": "auth-cluster",
        "RateLimiterPolicy": "auth-rate-limit",
        "Match": {
          "Path": "/auth/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/auth/{**catch-all}"
          }
        ]
      },
      "auth-health-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/auth-health"
        },
        "Transforms": [
          {
            "PathPattern": "/health"
          }
        ]
      },
      "validate-token-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/validate-token"
        },
        "Transforms": [
          {
            "PathPattern": "/api/auth/validate"
          }
        ]
      },
      "api-route": {
        "ClusterId": "api-cluster",
        "RateLimiterPolicy": "fixed",
        "Match": {
          "Path": "/api/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "{**catch-all}" },
          { "RequestHeader": "X-User-Id", "Set": "{Claims.user_id}" },
          { "RequestHeader": "X-Username", "Set": "{Claims.username}" },
          { "RequestHeader": "X-User-Email", "Set": "{Claims.email}" }
        ]
      },
      "secure-api-route": {
        "ClusterId": "api-cluster",
        "AuthorizationPolicy": "JwtBearer",
        "RateLimiterPolicy": "fixed",
        "Match": {
          "Path": "/secure-api/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "{**catch-all}" },
          { "RequestHeader": "X-User-Id", "Set": "{Claims.user_id}" },
          { "RequestHeader": "X-Username", "Set": "{Claims.username}" },
          { "RequestHeader": "X-User-Email", "Set": "{Claims.email}" }
        ]
      }
    },
    "Clusters": {
      "auth-cluster": {
        "Destinations": {
          "auth-destination": {
            "Address": "http://auth-sso:8080"
          }
        }
      },
      "api-cluster": {
        "LoadBalancingPolicy": "RoundRobin",
        "Destinations": {
          "destination1": {
            "Address": "http://api1:8080"
          },
          "destination2": {
            "Address": "http://api2:8080"
          },
          "destination3": {
            "Address": "http://api3:8080"
          }
        }
      }
    }
  }
}
